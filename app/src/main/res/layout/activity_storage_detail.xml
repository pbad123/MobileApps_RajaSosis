<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/putih_labil"
    tools:context=".storage_detail">
    <include layout="@layout/appbar_putih"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingHorizontal="10dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:orientation="vertical">
                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginVertical="10dp"
                    app:cardBackgroundColor="#ccc"
                    app:cardCornerRadius="25dp"
                    app:cardElevation="10dp">
                    <ImageView
                        android:id="@+id/fotoBarangBD"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:paddingVertical="10dp"
                        android:src="@drawable/ic_tambah_gambar_barang"/>
                </androidx.cardview.widget.CardView>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:text="ID\t\t\t\t\t\t\t\t\t:"
                            android:fontFamily="@font/questa_sans_regular"
                            android:textStyle="bold"
                            android:textColor="@color/merah_baru"
                            android:textSize="18dp"/>
                        <TextView
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/questa_sans_regular"
                            android:textColor="@color/hitam"
                            android:text="Nama Barang\t\t:"/>
                        <TextView
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/questa_sans_regular"
                            android:textColor="@color/hitam"
                            android:text="Harga Barang\t\t:"/>
                        <TextView
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/questa_sans_regular"
                            android:textColor="@color/hitam"
                            android:text="Harga Beli\t\t\t\t:"/>
                        <TextView
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/questa_sans_regular"
                            android:textColor="@color/hitam"
                            android:text="Jumlah Stok\t\t\t:"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/idBarangBD"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/questa_sans_regular"
                            android:text="ID"
                            android:textStyle="bold"
                            android:textColor="@color/merah_baru"
                            android:textSize="18dp"/>
                        <TextView
                            android:id="@+id/namaBarangBD"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/questa_sans_regular"
                            android:textColor="@color/hitam"
                            android:text="Nama"/>
                        <TextView
                            android:id="@+id/hargaBarangBD"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/questa_sans_regular"
                            android:textColor="@color/hitam"
                            android:text="Harga"/>
                        <TextView
                            android:id="@+id/beliBarangBD"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/questa_sans_regular"
                            android:textColor="@color/hitam"
                            android:text="Beli"/>
                        <TextView
                            android:id="@+id/stokBarangBD"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/questa_sans_regular"
                            android:textColor="@color/hitam"
                            android:text="Stok"/>
                    </LinearLayout>
                </LinearLayout>
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center_horizontal">
                    <Button
                        android:id="@+id/hapusBarangBD"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingHorizontal="50dp"
                        android:layout_marginRight="10dp"
                        android:text="Hapus"
                        android:fontFamily="@font/questa_sans_regular"
                        android:textColor="@color/putih_labil"
                        android:background="@drawable/gradient"
                        android:drawableLeft="@drawable/ic_hapus_putih"
                        android:gravity="center"/>
                    <Button
                        android:id="@+id/editBarangBD"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingHorizontal="55dp"
                        android:text="Edit"
                        android:fontFamily="@font/questa_sans_regular"
                        android:textColor="@color/putih_labil"
                        android:background="@drawable/gradient2"
                        android:drawableLeft="@drawable/ic_edit"/>
                </TableRow>
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    app:cardCornerRadius="25dp"
                    app:cardElevation="10dp"
                    app:cardBackgroundColor="@color/biru_tua">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingVertical="10dp"
                            android:text="Detail Tanggal Kedaluarsa"
                            android:fontFamily="@font/questa_sans_regular"
                            android:textSize="18dp"
                            android:textStyle="bold"
                            android:textAlignment="center"
                            android:textColor="@color/putih_labil"/>
                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/itemDetailBarangBD"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="10dp"
                            android:layout_marginBottom="10dp"
                            tools:listitem="@layout/row_detail_tanggal"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    app:cardCornerRadius="25dp"
                    app:cardElevation="10dp"
                    app:cardBackgroundColor="@color/biru_tua">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingVertical="10dp"
                            android:text="Detail Diskon Barang"
                            android:fontFamily="@font/questa_sans_regular"
                            android:textSize="18dp"
                            android:textStyle="bold"
                            android:textAlignment="center"
                            android:textColor="@color/putih_labil"/>
                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/itemDetailDiskonBD"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="10dp"
                            android:layout_marginBottom="10dp"
                            tools:listitem="@layout/row_detail_diskon"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </ScrollView>
    </RelativeLayout>
</LinearLayout>