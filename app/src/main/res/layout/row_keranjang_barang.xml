<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingHorizontal="20dp"
    android:paddingVertical="15dp"
    android:background="@color/biru_tua">
    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        app:cardCornerRadius="20dp"
        app:cardElevation="10dp">
        <ImageView
            android:id="@+id/fotoBarangKeranjang"
            android:layout_width="80dp"
            android:layout_height="80dp"/>
    </androidx.cardview.widget.CardView>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="10dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/idBarangKeranjang"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Id Barang"
            android:textColor="@color/putih_labil"
            android:fontFamily="@font/questa_sans_regular"/>
        <TextView
            android:id="@+id/namaBarangKeranjang"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Nama Barang"
            android:textStyle="bold"
            android:textColor="@color/merah_baru"
            android:fontFamily="@font/questa_sans_regular"/>
        <TextView
            android:id="@+id/tanggalKedaluarsaKeranjang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kedaluarsa"
            android:textColor="@color/putih_labil"
            android:fontFamily="@font/questa_sans_regular"/>
        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/hargaBarangKeranjang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Harga"
                android:textColor="@color/putih_labil"
                android:fontFamily="@font/questa_sans_regular"/>
            <TextView
                android:id="@+id/jumlahBarangKeranjang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="Jumlah"
                android:textColor="@color/merah_baru"
                android:fontFamily="@font/questa_sans_regular"/>
        </TableRow>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent">
        <ImageButton
            android:id="@+id/btnHapusKeranjang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_hapus"
            android:layout_alignParentRight="true"
            android:background="#00000000"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="22dp"
            android:text="Total Harga"
            android:textColor="@color/putih_labil"
            android:fontFamily="@font/questa_sans_regular"/>
        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true">
            <TextView
                android:id="@+id/totalBelanjaanKeranjang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total"
                android:textStyle="bold"
                android:textColor="@color/putih_labil"
                android:fontFamily="@font/questa_sans_regular"/>
            <TextView
                android:id="@+id/diskonBelanjaanKeranjang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_marginLeft="5dp"
                android:text="Diskon"
                android:textStyle="bold"
                android:textColor="@color/putih_labil"
                android:fontFamily="@font/questa_sans_regular"/>
        </TableRow>
    </RelativeLayout>
</LinearLayout>