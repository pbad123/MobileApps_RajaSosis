<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="6dp"
    app:cardCornerRadius="12dp"
    android:layout_marginHorizontal="10dp"
    android:layout_marginVertical="5dp"
    app:cardBackgroundColor="@color/colorPrimary">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="15dp"
        android:padding="10dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/namaBarangPD"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nama Barang"
                android:textStyle="bold"
                android:textColor="@color/merah_baru"
                android:fontFamily="@font/questa_sans_regular"/>
            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/hargaPD"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="7dp"
                    android:text="Harga"
                    android:textColor="@color/putih_labil"
                    android:fontFamily="@font/questa_sans_regular"/>
                <TextView
                    android:id="@+id/jumlahPD"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Jumlah"
                    android:textColor="@color/merah_baru"
                    android:fontFamily="@font/questa_sans_regular"/>
            </TableRow>
            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/modalPD"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:text="Modal"
                    android:textColor="@color/putih_labil"
                    android:fontFamily="@font/questa_sans_regular"/>
                <TextView
                    android:id="@+id/textPD1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:text="(Modal)"
                    android:textColor="@color/merah_baru"
                    android:fontFamily="@font/questa_sans_regular"/>
            </TableRow>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TableRow
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_gravity="right"
                android:layout_marginTop="20dp"
                android:layout_marginRight="70dp">
                <TextView
                    android:id="@+id/totalPD"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Total"
                    android:textColor="@color/putih_labil"
                    android:fontFamily="@font/questa_sans_regular"/>
                <TextView
                    android:id="@+id/hasilTotalPD"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:text="Diskon"
                    android:textColor="@color/merah_baru"
                    android:fontFamily="@font/questa_sans_regular"/>
            </TableRow>
            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginRight="50dp">
                <TextView
                    android:id="@+id/keuntunganPD"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:text="Keuntungan"
                    android:textColor="@color/putih_labil"
                    android:fontFamily="@font/questa_sans_regular"/>
                <TextView
                    android:id="@+id/textPD2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:text="(Modal)"
                    android:textColor="@color/merah_baru"
                    android:fontFamily="@font/questa_sans_regular"/>
            </TableRow>
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:id="@+id/diskonPD"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_gravity="right"
        android:layout_marginRight="40dp"
        android:layout_marginTop="10dp"
        android:text="-diskon"/>
    <ImageButton
        android:id="@+id/showPD"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        android:background="#00000000"
        android:src="@drawable/ic_tanda_turun" />
    <ImageButton
        android:id="@+id/hidePD"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_margin="15dp"
        android:src="@drawable/ic_tanda_naik"
        android:visibility="gone"
        android:background="#00000000"/>
</androidx.cardview.widget.CardView>